<Window x:Class="WiseSwitchWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WiseSwitchWpf"
        mc:Ignorable="d"
        Title="WiseSwitch" WindowState="Maximized" Height="426" Width="791">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="107*"/>
            <RowDefinition Height="303*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="237*"/>
            <ColumnDefinition Width="554*"/>
        </Grid.ColumnDefinitions>
        <!-- Your existing Grid content -->

        <Image Source="Images/WiseSwitchLogo.png" VerticalAlignment="Center" HorizontalAlignment="Center" Height="53" Width="227" Stretch="Fill"/>
        <Button Content="Reset Page" Click="ResetPage" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="53,80,0,0" Height="27" Width="120" Grid.Row="1"/>
        <Frame x:Name="mainFrame" Background="GhostWhite" NavigationUIVisibility="Hidden" Margin="16,23,16,22" RenderTransformOrigin="0.5,0.5" Grid.Column="1" Grid.Row="1">
        </Frame>
    </Grid>
</Window>

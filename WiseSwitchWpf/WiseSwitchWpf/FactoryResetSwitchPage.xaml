<Page x:Class="WiseSwitchWpf.FactoryResetSwitchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WiseSwitchWpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FactoryResetSwitchPage"
      Background="LightBlue">
    
    <Grid>
        <Button Content="Reset Switch" Click="ResetSwitch" Height="40" Width="200" Margin="300,205,300,205"></Button>
        <Label x:Name="ResetStatus" Content="Waiting for a connection..." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20"></Label>
    </Grid>
</Page>
